<% if flash[:errors]%>
    <% flash[:errors].each do |error| %>
        <%= error %>
    <% end %>
<% end %>

<%= form_for @post do |f| %>
    <%= f.label :title %>
    <%= f.text_field :title %><br>
    <%= f.label :content %>
    <%= f.text_area :content %><br>
    <%= f.label :blogger_id %>
    <%= f.collection_select :blogger, @bloggers, :id, :name %><br>
    <%= f.label :destination_id %>
    <%= f.collection_select :destination, @destinations, :id, :name %><br>
    <%= f.submit %>
<% end %>